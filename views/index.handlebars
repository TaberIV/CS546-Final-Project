<table class="homepage">
    <tr>
      <td>
        <article>
          <h2>In Theaters:</h2>
          <table class="movies">
            <tr>
              {{#each inTheaters}}
                <td><a href={{this.link}} class="title"><h3>{{this.title}}</h3></a></td>
              {{else}}
                <td>There's nothing in theaters</td>
              {{/each}}
            </tr>
            <tr>
              {{#each inTheaters}}
                <td><a href={{this.link}}><img src={{this.poster}}></a></td>
              {{/each}}
            </tr>
            <tr>
              {{#each inTheaters}}
                <td>{{this.releaseDate}}</td>
              {{/each}}
            </tr>
            <tr>
              {{#each inTheaters}}
                <td><p>{{this.description}}</p></td>
              {{/each}}
            </tr>
          </table>
        </article>
      </td>
    </tr>
</table>