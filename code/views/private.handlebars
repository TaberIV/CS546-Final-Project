<table class="user-info">
  <tr class="align-out">
    <th>{{user.username}}</th>
    <td><a href="/logout" class="account">Not {{user.username}}? Logout.</a></td>
  </tr>
  <tr>
    <td>First Name:</td>
    <td>{{user.firstname}}</td>
  </tr>
  <tr>
    <td>Last Name:</td>
    <td>{{user.lastname}}</td>
  </tr>
  <tr>
    <td>Profession:</td>
    <td>{{user.profession}}</td>
  </tr>
  <tr>
    <td>Bio:</td>
    <td>{{user.bio}}</td>
  </tr>
</table>