<article class="moviePage">
  <h2>{{movie.title}}</h2>
  <figure class="moviePoster">
    <img src={{movie.poster}}>
    <figcaption class="caption">Rating: {{movie.rating}}</figcaption>
  </figure>
  
  <table class="movieInfo">
    <tr>
      <td>Release Date:</td>
      <td>{{movie.releaseDate}}</td>
    </tr>
    <tr>
      <td>Description:</td>
      <td>{{movie.description}}</td>
    </tr>
    <tr>
      <td>Director:</td>
      <td>{{movie.director}}</td>
    </tr>
    <tr>
    <tr>
      <td>Cast:</td>
      <td>
        <ul>
          {{#each movie.cast}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </td>
    </tr>
    <tr>
      <td>Genre(s):</td>
      <td>
        <ul>
          {{#each movie.genres}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </td>
    </tr>
    <tr>
      <td>Where to Watch:</td>
      <td>
        <ul>
          {{#each movie.whereToWatch}}
            <li>{{this}} </li>
          {{/each}}
        </ul>
      </td>
    </tr>
      <td>Recommended Movies </td>
      {{#each recommendedMovies}}
      <td>
        <a href="/movies/{{this._id}}" class="title">
          <h3>{{this.title}}</h3>
          <img src={{this.poster}}>
        </a>
        <h3>{{this.releaseDate}}</h3>
        <p>{{this.description}}</p>
      </td>
      {{else}}
        <td>No Recommendations</td>
      {{/each}}
    </tr>
  </table>
</article>