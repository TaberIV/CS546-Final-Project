<article class="moviePage">
  <h2>{{movie.title}}</h2>
  <figure class="moviePoster">
    <img src={{movie.poster}}>
    <figcaption class="caption">Rating: {{movie.rating}}</figcaption>
  </figure>
  
  <table class="movieInfo">
    <tr>
      <td>Release Date:</td>
      <td>{{movie.releaseDate}}</td>
    </tr>
    <tr>
      <td>Description:</td>
      <td>{{movie.description}}</td>
    </tr>
    <tr>
      <td>Director:</td>
      <td>{{movie.director}}</td>
    </tr>
    <tr>
    <tr>
      <td>Cast:</td>
      <td>
        <ul>
          {{#each movie.cast}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </td>
    </tr>
    <tr>
      <td>Genre(s):</td>
      <td>
        <ul>
          {{#each movie.genres}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </td>
    </tr>
    <tr>
      <td>Where to Watch:</td>
      {{#if movie.inTheaters}}
        <td>In Theaters Now</td>
      {{else}}
        {{#each movie.streamPlatforms}}
          <td>{{this}}</td>
        {{/each}}
      {{/if}}
    </tr>
      {{#each movie.inTheaters}}
      <td>
        <a href="/movies/{{movie._id}}" class="title">
          <h3>{{movie.title}}</h3>
          <img src={{movie.poster}}>
        </a>
        <h3>{{movie.releaseDate}}</h3>
        <p>{{movie.description}}</p>
      </td>
      {{else}}
        <td>No Recommendations</td>
      {{/each}}
    </tr>
  </table>
</article>